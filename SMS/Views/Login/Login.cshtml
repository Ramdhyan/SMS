@model SMS.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@if (ViewBag.InvalidLogin != null)
{
    <input type="hidden" id="txterrormsg" value="@ViewBag.InvalidLogin" />
}

<body class="inner_page login">
    <div class="full_container">
        <div class="container">
            <div class=" verticle_center full_height">
                <div class="login_section">
                    <div class="logo_login">
                        <div class="center">
                            <h1 style="font-weight:bold;font-size:50px">LOGIN</h1>
                        </div>
                    </div>
                    <div class="login_form">
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {
                            <fieldset>
                                <div class="field">
                                    <label class="label_field">Email Address</label>
                                    @*<input type="email" name="email" placeholder="E-mail" />*@
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                                <div class="field">
                                    <label class="label_field">Password</label>
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })

                                </div>
                                <div class="field">
                                    <label class="label_field hidden">hidden label</label>
                                    @Html.ActionLink("ForgetPassword ?", "ForgetPassword", "Login",new { @class= "forgot" })

                                </div>
                                <div class="field margin_0">
                                    <label class="label_field hidden">hidden label</label>
                                        <input type="submit" value="Login" class="btn btn-success main_bt" />
                                </div>
                            </fieldset>
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>
